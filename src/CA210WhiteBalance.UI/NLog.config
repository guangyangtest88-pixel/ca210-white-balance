<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false">

  <targets>
    <!-- 控制台输出 -->
    <target xsi:type="Console" name="console"
            layout="${longdate} ${level:uppercase=true} ${message} ${exception}" />

    <!-- 文件输出 -->
    <target xsi:type="File" name="file"
            fileName="${specialfolder:folder=LocalApplicationData}/CA210WhiteBalance/logs/log_${shortdate}.txt"
            layout="${longdate} ${level:uppercase=true} ${message} ${exception}"
            archiveFileName="${specialfolder:folder=LocalApplicationData}/CA210WhiteBalance/logs/archive/log_{#}.txt"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            concurrentWrites="true" />

    <!-- 调试输出 -->
    <target xsi:type="Debug" name="debug"
            layout="${longdate} ${level:uppercase=true} ${message} ${exception}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="console,file" />
    <logger name="*" minlevel="Trace" writeTo="debug" />
  </rules>
</nlog>
